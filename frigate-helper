#!/bin/bash
set -e

# 1️⃣ Templates finden
TEMPLATES=($(ls /var/lib/vz/template/cache/debian-*-standard_*.tar.zst 2>/dev/null))
if [ ${#TEMPLATES[@]} -eq 0 ]; then
    echo "Keine Debian-Templates gefunden unter /var/lib/vz/template/cache/"
    exit 1
fi

echo "Gefundene Debian-Templates:"
select TEMPLATE in "${TEMPLATES[@]}"; do
    if [ -n "$TEMPLATE" ]; then
        echo "Ausgewählt: $TEMPLATE"
        break
    fi
done

# 2️⃣ Storage auswählen
STORAGES=($(pvesm status | awk 'NR>1 {print $1}'))
echo "Verfügbare Storage:"
select STORAGE in "${STORAGES[@]}"; do
    if [ -n "$STORAGE" ]; then
        echo "Container wird auf Storage $STORAGE erstellt"
        break
    fi
done

# 3️⃣ Container-ID abfragen
read -p "CTID für den Container: " CTID

# 4️⃣ DHCP oder statische IP
echo "Netzwerkmodus wählen:"
select NETMODE in "DHCP" "Static"; do
    if [ "$NETMODE" == "DHCP" ]; then
        IP_CONF=""
        break
    elif [ "$NETMODE" == "Static" ]; then
        read -p "Statische IP (z.B. 192.168.1.100/24): " STATIC_IP
        read -p "Gateway (z.B. 192.168.1.1): " GATEWAY
        IP_CONF="--net0 name=eth0,bridge=vmbr0,ip=$STATIC_IP,gw=$GATEWAY"
        break
    fi
done

# 5️⃣ Container erstellen
echo "Erstelle LXC Container $CTID..."
pct create $CTID $TEMPLATE --storage $STORAGE $IP_CONF --hostname frigate-$CTID --password root

# 6️⃣ Locale fixen
pct exec $CTID -- bash -c "
apt update && apt install -y locales
locale-gen en_US.UTF-8
update-locale LANG=en_US.UTF-8
"

# 7️⃣ Docker installieren
pct exec $CTID -- bash -c "
apt update && apt install -y ca-certificates curl gnupg
mkdir -p /etc/apt/keyrings
curl -fsSL https://download.docker.com/linux/debian/gpg | gpg --dearmor -o /etc/apt/keyrings/docker.gpg
echo 'deb [arch=amd64 signed-by=/etc/apt/keyrings/docker.gpg] https://download.docker.com/linux/debian bookworm stable' > /etc/apt/sources.list.d/docker.list
apt update
apt install -y docker-ce docker-ce-cli containerd.io docker-compose-plugin
systemctl enable docker
systemctl start docker
"

# 8️⃣ Frigate installieren
pct exec $CTID -- bash -c "
apt update && apt install -y git jq
git clone https://github.com/blakeblackshear/frigate.git /opt/frigate
cd /opt/frigate
docker compose up -d
"

echo "-----------------------------------"
echo "Frigate Container erstellt und gestartet!"
echo "CTID: $CTID"
echo "Zugriff: http://<Container-IP>:5000"
echo "-----------------------------------"
